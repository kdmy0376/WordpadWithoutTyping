<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Word Details"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <Button 
            android:id="@+id/details_addToLib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="담기"
            android:gravity="right"
            />
        <Button 
            android:id="@+id/details_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="번역보기"
            android:layout_gravity="right"
            />
        <Button 
            android:id="@+id/details_goWordPad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단어장보기"
            android:layout_gravity="right"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/wordTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="word title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/nounView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="noun" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/meaningView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="word meaning"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </ScrollView>

</LinearLayout>